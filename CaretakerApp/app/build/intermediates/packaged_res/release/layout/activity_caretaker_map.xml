<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Patient Location"
        app:titleTextColor="@color/white" />

    <!-- Patient Info Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textPatientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Location"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageStatusIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/textLocationStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Waiting for location data..."
                android:textSize="14sp"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/textLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No updates yet"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Stale Location Warning -->
    <LinearLayout
        android:id="@+id/layoutStaleWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/warning_light"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_warning"
            android:layout_marginEnd="8dp"
            app:tint="@color/warning" />

        <TextView
            android:id="@+id/textStaleWarning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location data is stale"
            android:textSize="14sp"
            android:textColor="@color/warning" />

    </LinearLayout>

    <!-- Map Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Google Maps -->
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Floating Action Button to center on patient -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCenterOnPatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@drawable/ic_location"
            android:contentDescription="Center on patient location"
            android:onClick="centerOnPatient"
            app:tint="@color/white"
            app:backgroundTint="@color/primary_color" />

    </FrameLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonViewHistory"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="View History"
            android:drawableStart="@drawable/ic_history"
            android:drawablePadding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonGeofences"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Geofences"
            android:drawableStart="@drawable/ic_fence"
            android:drawablePadding="8dp" />

    </LinearLayout>

</LinearLayout>