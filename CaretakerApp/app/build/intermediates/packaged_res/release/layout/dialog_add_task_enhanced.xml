<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Task Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTaskName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Task Name (e.g., Take a walk)"
                android:inputType="textCapSentences"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Task Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTaskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description (optional)"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:maxLines="4" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Task Category -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTaskCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category (e.g., Exercise, Medicine)"
                android:inputType="textCapSentences"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Scheduled Time -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTaskTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tap to select date and time"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Task Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Settings"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/purple_700" />

        <!-- Repeating Task Checkbox -->
        <CheckBox
            android:id="@+id/checkTaskRepeating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeating task"
            android:layout_marginBottom="8dp" />

        <!-- Enable Alarm Checkbox -->
        <CheckBox
            android:id="@+id/checkTaskEnableAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable alarm/notification"
            android:layout_marginBottom="8dp" />

        <!-- Caretaker Notification Checkbox -->
        <CheckBox
            android:id="@+id/checkTaskCaretakerNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notify caretaker if missed"
            android:layout_marginBottom="16dp" />

        <!-- Days of Week Selection -->
        <TextView
            android:id="@+id/labelDaysOfWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeat on days:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/purple_700"
            android:visibility="gone" />

        <!-- Quick Repeat Buttons -->
        <LinearLayout
            android:id="@+id/layoutQuickRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <Button
                android:id="@+id/buttonDaily"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Daily"
                android:textSize="12sp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/buttonWeekdays"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Weekdays"
                android:textSize="12sp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/buttonWeekends"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Weekends"
                android:textSize="12sp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- Day Toggle Buttons -->
        <LinearLayout
            android:id="@+id/layoutDaysOfWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <ToggleButton
                android:id="@+id/buttonSunday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOff="S"
                android:textOn="S"
                android:textSize="12sp"
                android:layout_margin="2dp" />

            <ToggleButton
                android:id="@+id/buttonMonday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOff="M"
                android:textOn="M"
                android:textSize="12sp"
                android:layout_margin="2dp" />

            <ToggleButton
                android:id="@+id/buttonTuesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOff="T"
                android:textOn="T"
                android:textSize="12sp"
                android:layout_margin="2dp" />

            <ToggleButton
                android:id="@+id/buttonWednesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOff="W"
                android:textOn="W"
                android:textSize="12sp"
                android:layout_margin="2dp" />

            <ToggleButton
                android:id="@+id/buttonThursday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOff="T"
                android:textOn="T"
                android:textSize="12sp"
                android:layout_margin="2dp" />

            <ToggleButton
                android:id="@+id/buttonFriday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOff="F"
                android:textOn="F"
                android:textSize="12sp"
                android:layout_margin="2dp" />

            <ToggleButton
                android:id="@+id/buttonSaturday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOff="S"
                android:textOn="S"
                android:textSize="12sp"
                android:layout_margin="2dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>