<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MMSE Assessment Results"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Main Results Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Total Score -->
                <TextView
                    android:id="@+id/totalScoreText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Score: 26/30"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <!-- Interpretation -->
                <TextView
                    android:id="@+id/interpretationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Normal cognitive function"
                    android:textSize="18sp"
                    android:textColor="@color/accent_color"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Assessment Type Indicator -->
                <TextView
                    android:id="@+id/performanceBreakdownText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ¨ AI-Personalized Assessment Results"
                    android:textSize="16sp"
                    android:textColor="@color/accent_color"
                    android:gravity="center"
                    android:drawablePadding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Overall Feedback Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assessment Summary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/overallFeedbackText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Performance breakdown will appear here..."
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Detailed Results Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detailed Question Analysis"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="12dp" />

        <!-- Evaluation Details Container -->
        <LinearLayout
            android:id="@+id/evaluationDetailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- Dynamic evaluation details will be added here -->
            
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/shareResultsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share Results"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"
                android:drawableLeft="@android:drawable/ic_menu_share"
                android:drawablePadding="8dp" />

            <Button
                android:id="@+id/backToMainButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Back to Main"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Additional Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Results are automatically saved and can be accessed in the patient history."
            android:textSize="12sp"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:drawablePadding="8dp" />

    </LinearLayout>

</ScrollView>