<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Multiple Medicine Names Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medicine Names"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textSize="14sp" />
    
    <LinearLayout
        android:id="@+id/medicineNamesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">
        
        <!-- Initial medicine name input -->
        <EditText
            android:id="@+id/inputTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medicine Name (e.g., Aspirin)"
            android:inputType="textCapSentences" />
        
    </LinearLayout>
    
    <Button
        android:id="@+id/btnAddMedicine"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="+ Add Medicine"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:padding="8dp" />

    <!-- Medicine Images Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medicine Images"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="14sp" />
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" />
    
    <Button
        android:id="@+id/btnAddImage"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="+ Add Image"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:padding="8dp" />

    <EditText
        android:id="@+id/inputDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dosage (for medication) or notes (optional)"
        android:layout_marginTop="16dp"
        android:inputType="textCapSentences|textMultiLine" />

    <EditText
        android:id="@+id/inputDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date &amp; Time (tap to pick)"
        android:focusable="false"
        android:clickable="true"
        android:layout_marginTop="8dp" />


    <CheckBox
        android:id="@+id/checkCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark as completed"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/checkRepeating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat daily"
        android:layout_marginTop="8dp" />

</LinearLayout>
</ScrollView>


