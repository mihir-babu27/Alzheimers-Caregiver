<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enhanced MMSE Assessment"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Progress Indicator -->
        <TextView
            android:id="@+id/questionProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 1 of 15"
            android:textSize="16sp"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Loading State -->
        <LinearLayout
            android:id="@+id/loadingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginVertical="32dp">

            <ProgressBar
                android:id="@+id/loadingProgress"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/loadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generating personalized questions..."
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                android:gravity="center"
                android:maxWidth="300dp" />

        </LinearLayout>

        <!-- Question Content -->
        <androidx.cardview.widget.CardView
            android:id="@+id/questionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Question Title -->
                <TextView
                    android:id="@+id/questionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is today's date?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4dp" />

                <!-- Text Input Container -->
                <LinearLayout
                    android:id="@+id/textInputContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your answer"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:maxLines="3" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Multiple Choice Container -->
                <LinearLayout
                    android:id="@+id/multipleChoiceContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

                <!-- Recall Container -->
                <LinearLayout
                    android:id="@+id/recallContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please recall the items mentioned earlier:"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text"
                        android:layout_marginBottom="12dp" />

                    <!-- Dynamic recall input fields will be added here -->

                </LinearLayout>

                <!-- Drawing Container -->
                <LinearLayout
                    android:id="@+id/drawingContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please draw in the area below:"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text"
                        android:layout_marginBottom="12dp" />

                    <com.mihir.alzheimerscaregiver.views.DrawingCanvasView
                        android:id="@+id/drawingView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/drawing_canvas_border" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="12dp">

                        <Button
                            android:id="@+id/clearDrawingButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clear"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_marginEnd="8dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Image Container -->
                <LinearLayout
                    android:id="@+id/imageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/questionImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="16dp"
                        android:scaleType="centerInside"
                        android:background="@drawable/image_border" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="What do you see in this image?"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/imageAnswerInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:maxLines="2" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/prevButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Previous"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"
                android:enabled="false" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Assessment Type Indicator -->
        <TextView
            android:id="@+id/assessmentTypeIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœ¨ AI-Personalized Assessment"
            android:textSize="14sp"
            android:textColor="@color/accent_color"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:drawablePadding="8dp" />

    </LinearLayout>

</ScrollView>