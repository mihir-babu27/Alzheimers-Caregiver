<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Digital Clock Display -->
    <TextView
        android:id="@+id/clockTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:text="7:30"
        android:textColor="#FFFFFF"
        android:textSize="96sp"
        app:layout_constraintBottom_toTopOf="@+id/alarmTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- AM/PM Indicator -->
    <TextView
        android:id="@+id/clockAmPm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-light"
        android:text="AM"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/clockTime"
        app:layout_constraintStart_toEndOf="@+id/clockTime" />

    <!-- Alarm Title -->
    <TextView
        android:id="@+id/alarmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-medium"
        android:text="Medication Reminder"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/alarmMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clockTime" />

    <!-- Alarm Message -->
    <TextView
        android:id="@+id/alarmMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="It's time to take your medication"
        android:textColor="#CCCCCC"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmTitle" />

    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Snooze Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/snoozeButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#303030"
            android:fontFamily="sans-serif-medium"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:text="SNOOZE"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="75dp"
            app:icon="@android:drawable/ic_popup_sync"
            app:iconGravity="textTop"
            app:iconPadding="8dp"
            app:iconTint="#FFFFFF" />

        <!-- Dismiss Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dismissButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="24dp"
            android:backgroundTint="#D32F2F"
            android:fontFamily="sans-serif-medium"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:text="DISMISS"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="75dp"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconGravity="textTop"
            app:iconPadding="8dp"
            app:iconTint="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>